$transit-fieldset-background-color:#eee !default;
$transit-fieldset-border-color:darken(#eee, 5%) !default;
$transit-link-color:#1a7bad !default;
$transit-heading-font-color:#333 !default;
$transit-button-color:lighten(#1a7bad, 20%) !default;
$transit-button-active-color:lighten(#1a7bad, 10%) !default;
$transit-secondary-color:#ad361a !default;

@mixin transit_icon24($row:1, $bgx:0px, $offset:0px){
	background-image:url(<%= asset_path 'transit/icon24x24.png' %>); background-repeat:no-repeat;
	$y: (($row - 1) * -24px) + $offset;
	background-position:$bgx $y;
}

@mixin transit_fileIcon($row:1, $bgx:0px, $offset:0px){
	background-image:url(<%= asset_path 'transit/icon24x24_files.png' %>); background-repeat:no-repeat;
	$y: (($row - 1) * -24px) + $offset;
	background-position:$bgx $y;
}

a[href$='.zip'], a[href$='.rar'], a[href$='.gzip']{
	@include transit_fileIcon(6);
}

a[href$='.wav'], a[href$='.mp3'], a.file_icon_audio{ @include transit_fileIcon(7); }
a[href$='.mp4'], a[href$='.wmv'], a[href$='.mov'], a[href$='.mpeg'], a.file_icon_video{ @include transit_fileIcon(8); }
a[href$='.swf'], a[href$='.flv'], a[href$='.fla'], a.file_icon_flash{ @include transit_fileIcon(9); }
a[href$='.pdf'], a.file_icon_pdf{ @include transit_fileIcon(1); }
a[href$='.doc'], a[href$='.docx'], a.file_icon_word{ @include transit_fileIcon(2); }
a[href$='.csv'], a[href$='.xls'], a[href$='.xlsx'], a.file_icon_excel{ @include transit_fileIcon(3); }
a[href$='.ppt'], a[href$='.pptx'], a[href$='.key'], a.file_icon_powerpoint{ @include transit_fileIcon(4); }
a[href$='.tif'], a[href$='.tiff'], a[href$='.bmp'], a.file_icon_image{ @include transit_fileIcon(5); }
a[href$='.eps'], a[href$='.ai'], a.file_icon_vector{ @include transit_fileIcon(10); }

@mixin iconSquare($size:32){
	display:block; width:#{$size}px; height:#{$size}px; text-indent:-9999em;
}

