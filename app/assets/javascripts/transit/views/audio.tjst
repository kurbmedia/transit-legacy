<audio src="<%= source %>" width="100%" height="100%" id="audio_player_<%= id %>"></video>
<div class="audio_player_controls" id="audio_player_controls_<%= id %>">
	<button type='button' class='play play_pause'>Play</button>			
	<input type="range" class="seek_bar" name="audio_seek_bar_<%= id %>" min="0" max="1" step="0.1" value="0" />
	<span class='time'>00:00 / 00:00</span>
	<button type='button' class='mute_toggle'>Mute</button>
	<input type="range" class="audio_bar" name="audio_volume_bar_<%= id %>" min="0" max="1" step="1" value="1" />
</div>