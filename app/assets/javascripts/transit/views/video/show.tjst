<video src="<%= source %>" width="100%" height="100%" id="video_player_<%= playerid %>"></video>
<div class="video_player_controls" id="video_player_controls_<%= playerid %>">
	<button type='button' class='play play_pause'>Play</button>			
	<input type="range" class="seek_bar" name="video_seek_bar_<%= playerid %>" min="0" max="1" step="0.1" value="0" />
	<span class='time'>00:00 / 00:00</span>
	<button type='button' class='mute_toggle'>Mute</button>
	<input type="range" class="volume_bar" name="video_seek_bar_<%= playerid %>" min="0" max="1" step="1" value="1" />
</div>