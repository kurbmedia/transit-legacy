<%= deliver_media_context(context, context.to_backbone) %>
<div class='toolbar'>
	<ol class="split">
		<li style='width:350px; padding-left:.5em'>
			<%= form.label :source %>
			<%= form.text_field :source, :value => context.body, :style => 'width:225px' %>
		</li>
		<li>
			<%= form.label :video_type %>
			<%= form.select :video_type, options_for_select(Video.sources, context.video_type) %>
		</li>
	</ol>
</div>