<div class="audio_player" data-audio-source="<%= context.source %>" id="mediaplayer_<%= context.id %>">
</div>
<ol class="split">
	<li style='width:350px; padding-left:.5em'>
		<%= form.label :source %>
		<%= form.text_field :source, :value => context.body, :style => 'width:225px' %>
	</li>
</ol>
<script type="text/javascript" charset="utf-8">
//<![CDATA[
	$('div.audio_player').trigger('transit:audio');
//]]>
</script>