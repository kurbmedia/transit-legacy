<li data-asset-id="<%= file.id %>">
	<%= link_to file.name, file.file.url(:original), :class => file_icon_class(file) %>
	<%= link_to 'Delete', package_asset_path(file), :method => :delete, :remote => true, :confirm => "Are you sure you want to delete this image?\n\nNOTE: Make sure you remove any links to this file from your copy if you've used it.\n\n", :class => 'icon_delete', :title => 'Delete File' %>
</li>
