<li id="<%= image.id %>">
	<%= image_tag(image.file.url(:small)) %>
	<%= link_to 'Delete', admin_asset_path(image), :method => :delete, :remote => true, :confirm => "Are you sure you want to delete this image?\n\nNOTE: Make sure you remove this image from your copy if you've used it.\n\n", :class => 'icon_delete', :title => 'Delete Image' %>
	<%= link_to 'Detail', admin_asset_path(image), :remote => true, :class => 'icon_zoom', :title => 'View detail / links' %>
</li>
