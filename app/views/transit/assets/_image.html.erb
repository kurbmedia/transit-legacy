<li id="asset_<%= image.id %>" class='image'>
	<span class='image_asset_holder'>
		<%= image_tag(image.file.url(:preview)) %>
		<%= link_to 'Delete', transit.delete_asset_path(image.id), :method => :delete, :remote => true, :confirm => "Are you sure you want to delete this image?\n\nNOTE: Make sure you remove this image from your copy if you've used it.\n\n", :class => 'icon_delete', :title => 'Delete Image' %>
	</span>	
	<span class='add_heading'>Add to copy</span>
	<ul class='image_style_list'>
		<% image.file.styles.keys.map(&:to_s).each do |style| %>
		<% next if style == 'preview' %>
		<li><%= link_to style.titleize, image.file.url(style), :class => "insert_image_link" %></li>
		<% end %>
	</ul>
</li>
